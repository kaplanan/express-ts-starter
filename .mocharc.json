{
    "package": "./package.json",
    "reporter": "mocha-junit-reporter",
    "reporterOptions": [
      "testsuitesTitle=true",
      "mochaFile=./tests_output/unit-tests-results.xml",
      "testCaseSwitchClassnameAndName=true",
      "jenkinsMode=true"
    ],
    "require": [
        "ts-node/register",
        "tsconfig-paths/register"
      ],
    "recursive": true,
    "spec": ["test/**/*.spec.ts"],
    "exit": true
  }
  