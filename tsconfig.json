{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "noImplicitAny": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "strict": true,
        "alwaysStrict": true,
        "removeComments": true,
        "incremental": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "paths": {
          "@/*": [
            "src/*"
          ]
        }
    },
    "include": [
        "src/**/*"
    ]
}