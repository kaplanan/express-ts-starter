{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "alwaysStrict": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
          "@/*": [
            "src/*"
          ]
        },
        "esModuleInterop": true

    },
    "include": [
        "src/**/*"
    ]
}